<div class="modal_wrap">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
		<ul class="form_wrap clearfix">
	    	<li>
	    		<span>First Name:</span>
	    		<%= f.text_field :first_name, :placeholder => "First Name *", :autofocus => true %>
	    	</li>
			<li>
				<span>Last Name:</span>
	            <%= f.text_field :last_name, :placeholder => "Last Name *", :autofocus => true %>
			</li>
	        <li>
	            <span>Country:</span>
	            <%= select_tag :country, options_for_select([["Canada", "Canada"], ["USA", "USA"], ["Great Britian", "Great Britian"], ["France","France"]]), :class => "select_menu" %>
	        </li>
	        <li>
	            <span>Email:</span>
	            <%= f.email_field :email, :placeholder => "Email Address *", :autofocus => true %>
	        </li>
	        <li>
	            <span>Phone:</span>
	            <%= f.text_field :phone_no, :placeholder => "Phone *", :autofocus => true %>
	        </li>
	        <li>
	            <span>Password:</span>
	            <%= f.password_field :password, :placeholder => "Password", :autofocus => true, :class => "input_ico_right input_ico_password" %>
	        </li>
	        <li>
	            <span>Confirm Password:</span>
	            <%= f.password_field :password, :placeholder => "Password", :autofocus => true, :class => "input_ico_right input_ico_password" %>
	        </li>
	    </ul>

	    <div class="modal_twobutton">
        <%= f.submit "Save Changes",:class => "btn btn_orange" %>	
	      <%= f.button "Cancel", :type=> "button",:class => "btn btn_gray_onblack btn", :disable => true%>
	    </div>
	<% end %>
</div>


